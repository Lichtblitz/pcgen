<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TitledPane?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.RowConstraints?>
<?import javafx.scene.Scene?>
<?import javafx.scene.text.Text?>
<Scene xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1"
       fx:controller="pcgen.gui3.tabs.summary.AbilityScores">

    <GridPane>
        <TitledPane collapsible="false" GridPane.columnIndex="0" GridPane.rowIndex="0" text="%in_sumAbilityScores">
            <TableView items="${controller.pcStatList}" editable="true">
                <columns>
                    <TableColumn editable="false"
                                 reorderable="false"
                                 resizable="false"
                                 sortable="false"
                                 text="Ability"
                                 cellValueFactory="${controller.labelFactory}"/>

                    <TableColumn editable="false"
                                 reorderable="false"
                                 resizable="false"
                                 sortable="false"
                                 text="Final&#10;Score"
                                 cellValueFactory="${controller.totalFactory}"/>

                    <TableColumn editable="false"
                                 reorderable="false"
                                 resizable="false"
                                 sortable="false"
                                 text="Ability&#10;Mod"
                                 cellValueFactory="${controller.modFactory}"/>

                    <TableColumn reorderable="false"
                                 resizable="false"
                                 sortable="false"
                                 text="Editable&#10;Score"
                                 cellValueFactory="${controller.baseFactory}"
                                 cellFactory="${controller.customizationCellFactory}"
                    />

                    <TableColumn editable="false"
                                 reorderable="false"
                                 resizable="false"
                                 sortable="false"
                                 text="Race&#10;Adj"
                                 cellValueFactory="${controller.raceBonusFactory}"/>

                    <TableColumn editable="false"
                                 reorderable="false"
                                 resizable="false"
                                 sortable="false"
                                 text="Misc&#10;Adj"
                                 cellValueFactory="${controller.otherBonusFactory}"/>
                </columns>
                <columnResizePolicy>
                    <TableView fx:constant="CONSTRAINED_RESIZE_POLICY"/>
                </columnResizePolicy>
            </TableView>
        </TitledPane>

        <AnchorPane GridPane.columnIndex="0" GridPane.rowIndex="1">
            <BorderPane>
                <top>
                    <Text fx:id="toptext">Dies ist ein Test\nUnd hier folgt ein weiterer\nund was ist das jetzt?</Text>
                </top>
                <bottom>
                    <Text fx:id="bottomtext">Dies ist ein Test\nUnd hier folgt ein weiterer\nund was ist das jetzt?
                    </Text>
                </bottom>
            </BorderPane>
        </AnchorPane>
        <columnConstraints>
            <ColumnConstraints/>
        </columnConstraints>
        <rowConstraints>
            <RowConstraints/>
            <RowConstraints/>
        </rowConstraints>
    </GridPane>
</Scene>
